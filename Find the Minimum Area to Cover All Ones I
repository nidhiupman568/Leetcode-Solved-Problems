class Solution {
public:
    int minimumArea(vector<vector<int>>& grid) {
        int m = grid.size();
        int n = grid[0].size();
        int minRow = m, maxRow = -1, minCol = n, maxCol = -1;
        
        // Find the boundaries of the rectangle containing all 1's
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
â€¦        if (maxRow == -1) return 0;
        
        // Calculate the area of the rectangle
        int height = maxRow - minRow + 1;
        int width = maxCol - minCol + 1;
        return height * width;
    }
};
